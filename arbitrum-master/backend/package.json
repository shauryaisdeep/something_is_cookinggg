{
  "name": "stellar-arbitrage-bot-backend",
  "version": "1.0.0",
  "description": "Backend API for Stellar Arbitrage Bot - Complete arbitrage trading system with real-time analysis and Soroban smart contract execution",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "build": "echo 'No build step required for Node.js'",
    "clean": "rm -rf logs/* node_modules/.cache",
    "logs": "tail -f logs/$(date +%Y-%m-%d).log",
    "db:seed": "node scripts/seedDatabase.js",
    "db:migrate": "node scripts/migrateDatabase.js"
  },
  "keywords": [
    "stellar",
    "arbitrage",
    "trading",
    "bot",
    "soroban",
    "smart-contracts",
    "defi",
    "cryptocurrency",
    "blockchain"
  ],
  "author": "Stellar Arbitrage Bot Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "mongoose": "^8.0.3",
    "axios": "^1.6.2",
    "node-cache": "^5.1.2",
    "ws": "^8.14.2",
    "stellar-sdk": "^11.2.2",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "dotenv": "^16.3.1",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.33.0",
    "nodemailer": "^6.9.7",
    "qrcode": "^1.5.3",
    "speakeasy": "^2.0.0",
    "uuid": "^9.0.1",
    "moment": "^2.29.4",
    "lodash": "^4.17.21",
    "crypto": "^1.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "prettier": "^3.1.0",
    "@types/jest": "^29.5.8",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-security": "^1.7.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/stellar-arbitrage-bot.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/stellar-arbitrage-bot/issues"
  },
  "homepage": "https://github.com/your-username/stellar-arbitrage-bot#readme",
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/logs/**",
      "!**/coverage/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "plugins": [
      "prettier",
      "security"
    ],
    "rules": {
      "prettier/prettier": "error",
      "no-console": "warn",
      "no-unused-vars": "error",
      "security/detect-object-injection": "warn"
    },
    "env": {
      "node": true,
      "es2021": true,
      "jest": true
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2
  }
}

# Environment Configuration
NODE_ENV=development
PORT=5000
HOST=localhost

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/stellar-arbitrage-bot

# Stellar Network Configuration
STELLAR_NETWORK=testnet
HORIZON_URL=https://horizon-testnet.stellar.org
SOROBAN_RPC_URL=https://soroban-testnet.stellar.org

# Contract Addresses (Testnet)
ARBITRAGE_CONTRACT_ADDRESS=CDLZFC3SYJYDZT7K67VZ75HPJVIEUVNIXF47ZG2FB2RMQQAHHXCN3X3E
TOKEN_CONTRACT_ADDRESS=CDLZFC3SYJYDZT7K67VZ75HPJVIEUVNIXF47ZG2FB2RMQQAHHXCN3X3E

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
BCRYPT_ROUNDS=12

# API Configuration
API_RATE_LIMIT=100
API_TIMEOUT=30000

# Cache Configuration
CACHE_TTL_TOP_ASSETS=1800
CACHE_TTL_LIQUIDITY=300
CACHE_TTL_ORDER_BOOKS=60
CACHE_TTL_ARBITRAGE=120

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30000
WS_CLIENT_TIMEOUT=60000
WS_MAX_CLIENTS=100

# Logging Configuration
LOG_LEVEL=info
LOG_DIRECTORY=./logs
LOG_MAX_FILES=7
LOG_MAX_SIZE=10MB

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@yourdomain.com

# Redis Configuration (Optional)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Monitoring Configuration (Optional)
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090
GRAFANA_ENABLED=false
GRAFANA_PORT=3001

# Feature Flags
FEATURE_REALTIME_UPDATES=true
FEATURE_WEBSOCKET_SUPPORT=true
FEATURE_DATABASE_LOGGING=true
FEATURE_EMAIL_NOTIFICATIONS=false
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_RISK_MANAGEMENT=true
FEATURE_AUTO_EXECUTION=false

# Arbitrage Configuration
MIN_PROFIT_THRESHOLD=0.001
MIN_PROFIT_XLM=0.1
MAX_TRADE_AMOUNT=10000
MAX_EXECUTABLE_AMOUNT=1000
